<h1>Зарегестрировать нового пользователя</h1>
<form action="/register" method="POST">
  <label for="">Имя пользователя</label>
  <input type="text" placeholder="Имя" name="name" required>
  <input type="text" placeholder="Фамилия" name="firstName" required>
  <input type="text" placeholder="Отчество" name="secondName" required>
  <input type="email" name="email" placeholder="email" name="email">
  <label for="">Группа</label>
  <input type="text" placeholder="Группа (полностью)" name="group" required>
  <input type="submit" value="Отправить">
</form>
<h2>Пользователи</h2>
<ul>
    {{#each students}}
    <li>
      {{name}}
      {{firstName}}
      {{secondName}}
      {{email}}
      {{group}}
      <form class="" action="/register/delete" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <input type="hidden" name="name" value="{{name}}">
        <input type="hidden" name="email" value="{{email}}">
        <button type="submit" name="button">Удалить</button>
      </form>
    </li>
    {{else}}
    <li>Список пуст </li>
    {{/each}}
</ul>
